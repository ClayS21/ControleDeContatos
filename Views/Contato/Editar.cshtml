@{
    ViewData["Title"] = "Editar Contatos";
}

<div class="text-center">

    <h1 class="display-4">Editar Contato</h1>

</div>

<form>
    <div class="mb-3">
        <label for="nome" class="form-label">Nome</label>
        <input type="text" class="form-control" placeholder="Digite o nome do contato">
    </div>

    <div class="mb-3">
        <label for="email" class="form-label">E-Mail</label>
        <input type="text" class="form-control" placeholder="Digite o E-Mail">
    </div>

    <div class="mb-3">
        <label for="celular" class="form-label">Celular</label>
        <input type="text" class="form-control" placeholder="Digite o telefone">
    </div>

    <button type="submit" class="btn btn-primary">Alterar</button>

    <a class="btn btn-secondary" asp-controller="Contato" asp-action="Index" role="button">Voltar</a>
</form>